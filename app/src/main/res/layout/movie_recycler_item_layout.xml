<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="8dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="8dp"
    android:background="?attr/selectableItemBackgroundBorderless">

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:id="@+id/tv_poster_image_view"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:textColor="?attr/colorPrimary"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:id="@+id/tv_title_text_view"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:text="TextViews"
        app:layout_constraintLeft_toLeftOf="@+id/tv_poster_image_view"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_poster_image_view" />

    <TextView
        android:textSize="11sp"
        android:id="@+id/tv_rating_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9.9"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_text_view"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/tv_poster_image_view" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="12dp"
        android:layout_height="0dp"
        app:srcCompat="@drawable/ic_star_rate_black_18dp"
        app:layout_constraintLeft_toRightOf="@+id/tv_rating_text_view"

        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_rating_text_view"
        android:layout_marginBottom="0dp"
        app:layout_constraintTop_toTopOf="@+id/tv_rating_text_view"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:textSize="11sp"
        android:id="@+id/release_year_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_text_view"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:textSize="11sp"
        android:id="@+id/upcoming_release_text_View"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_text_view"
        android:layout_marginLeft="0dp" />

</android.support.constraint.ConstraintLayout>