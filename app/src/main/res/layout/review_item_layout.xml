<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="?attr/selectableItemBackground">


    <ImageView
        android:id="@+id/user_image_view"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:srcCompat="@drawable/abstract_user"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp" />

    <TextView
        android:textColor="?attr/colorPrimary"
        android:fontFamily="sans-serif-condensed"
        android:textSize="16sp"
        android:textStyle="bold"
        android:id="@+id/user_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintLeft_toRightOf="@+id/user_image_view"
        android:layout_marginLeft="8dp" />

    <at.blogc.android.views.ExpandableTextView
        android:textColor="?attr/colorPrimary"
        app:animation_duration="300"
        android:maxLines="4"
        android:ellipsize="end"
        android:textSize="15sp"
        android:fontFamily="sans-serif-condensed"
        android:id="@+id/user_review_text_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/user_image_view"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />
</android.support.constraint.ConstraintLayout>