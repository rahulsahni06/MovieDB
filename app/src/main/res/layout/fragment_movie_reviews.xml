<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sahni.rahul.moviedb.fragments.MovieReviewsFragment">


    <TextView
        android:visibility="invisible"
        android:id="@+id/no_review_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reviews N/A"
        android:textSize="20sp"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
         />

    <ProgressBar
        android:id="@+id/user_review_progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp" />

    <android.support.v7.widget.RecyclerView
        android:visibility="invisible"
        android:id="@+id/user_reviews_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:paddingBottom="8dp"/>
</RelativeLayout>
